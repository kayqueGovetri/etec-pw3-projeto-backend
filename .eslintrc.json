{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": "off",
    "semi": "off",
    "no-console": "off",
    "import/no-unresolved": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle":"off",
    "no-restricted-syntax":"off",
    "no-throw-literal":"off"
  }
}